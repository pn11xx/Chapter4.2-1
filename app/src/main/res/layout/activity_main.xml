<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pngo.chapter42.MainActivity">

    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="514dp"
        android:layout_marginRight="-24dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="-2dp">

        <Button
            android:id="@+id/diamondButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp"
            android:text="Diamond"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/oddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/evenButton"
            android:layout_alignBottom="@+id/evenButton"
            android:layout_toEndOf="@+id/evenButton"
            android:layout_toRightOf="@+id/evenButton"
            android:text="Odd Numbers" />

        <Button
            android:id="@+id/evenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/diamondButton"
            android:layout_alignBottom="@+id/diamondButton"
            android:layout_toEndOf="@+id/diamondButton"
            android:layout_toRightOf="@+id/diamondButton"
            android:text="Even Numbers" />

        <TextView
            android:id="@+id/display"
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:layout_below="@+id/diamondButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="158dp"
            android:text="TextView" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
